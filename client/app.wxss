  align-items: flex-start;
  flex-direction: column;
  margin: 1% 0 0 0;
  flex: 1 0 auto;
  box-sizing: border-box;
  min-height: 100%;
}

.body{
  display: flex;
  justify-content: center;
  flex-direction: column;
  flex: 1 0 auto;
}

.img{
  display: block;
  width: 100%;
  height: auto;
}

.bottom{
  background: #E0E0E0;
  width:auto;
  height: 8%;
  margin: 8% 0 0 0;
  padding: 2% 3%;
  flex: 0 0 auto;
  font-size: 28rpx;
}
