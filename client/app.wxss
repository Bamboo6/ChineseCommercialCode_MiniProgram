.body{
  display: flex;
  justify-content: center;
  flex-direction: column;
  flex: 1 0 auto;
}

.img{
  display: block;
  width: 100%;
  height: auto;
}

.bottom{
  display: flex;
  align-self: flex-end;
  font-size: 28rpx;
  background: #E0E0E0;
  width:100%;
  height: 130rpx;
  margin: 8% 0 0 0;
  padding: 2% 0;
}

.bottom text{
  padding: 0 30rpx;
  text-align: center;
}
